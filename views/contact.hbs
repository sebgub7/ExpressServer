<h2>Contact me</h2>

{{#if isSent}}
<div class="isSent">
  <p>The message has been sent!<br>
  File {{ projectFileName }} has been uploaded.</p>
</div>
{{/if}}
{{#if isError}}
<div class="isError">
  <p>You can't leave fields empty!</p>
</div>
{{/if}}

<form action="/contact/send-message" method="POST" enctype="multipart/form-data">
  <label>
    Your name: <input type="text" name="author">
  </label>
  <label>
    Your email: <input type="email" name="sender">
  </label>
  <label>
    Title: <input type="text" name="title">
  </label>
  <label>
    Project design: <input type="file" name="projectFile" accept="image/png, image/gif, image/jpeg, image/jpg">
  </label>
  <label>
    Message: <textarea name="message"></textarea>
  </label>
  <button type="submit">Send message</button>
</form>